<%- include('header'); -%>

  <body>
    <div class="about-page" id="vertex-container">
      <%- include('menu'); -%>

      <div class="container">
        <div class="row">
          <div class="contact col-md-12">
            <form action="/posts" method="post" >
              <div class="row mt-4">
                <div class="col-md-4">
                  <label> TITLE </label>
                  <div class="form-group">
                    <input
                      type="text"
                      id="title"
                      name="title"
                      class="form-control"
                      placeholder=""
                    />
                  </div>
                </div>

                <div class="col-md-4">
                  <label> aythorId </label>
                  <div class="form-group">
                    <input
                      type="text"
                      id="authorId"
                      name="authorId"
                      class="form-control"
                      placeholder=""
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <label> isPublic </label>
                  <div class="form-group">
                    <input
                      type="text"
                      id="isPublic"
                      name="isPublic"
                      class="form-control"
                      placeholder=""
                    />
                  </div>
                </div>

              <div class="col-md-12">
                <label> Description </label>
                <div class="form-group">
                  <textarea
                    name="description"
                    id="description"
                    cols="150"
                    rows="10"
                  ></textarea>
                </div>
              </div>
              <div class="col-md-12">
                <label> Content </label>
                <div class="form-group">
                  <textarea
                    name="content"
                    id="content"
                    cols="150"
                    rows="10"
                  ></textarea>
                </div>
              </div>
              <div class="col-md-12">
                <label> Image </label>
                <form action="/uploadImage" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                    <input
                     type="file"
                      name="image"
                      id="image"  
                    />
                    <input type="submit" value="Upload Image">
                  </div>
                </form>
               
              </div>

              <div class="col-md-12">
                <input
                  type="submit"
                  id="submit"
                  value="Post Blog"
                  class="btn btn-primary btn-submit"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script src="/ckeditor/ckeditor.js"></script>
<script>
  CKEDITOR.replace("content", {
    extraPlugins: "filebrowser",
    filebrowserBrowseUrl: "/list", //upload location
    filebrowserUploadMethod: "form",
    filebrowserUploadUrl: "/upload", //route
  });
  CKEDITOR.replace("description");
</script>
